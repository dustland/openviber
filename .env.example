# OpenViber CLI/Daemon Environment Variables
# Copy this to .env and fill in values

# OpenRouter API key for AI functionality
# Get your key at: https://openrouter.ai/
OPENROUTER_API_KEY=

# Gateway URL (central coordinator; vibers connect via WebSocket)
VIBER_GATEWAY_URL=http://localhost:6009

# Optional: bearer token forwarded to the gateway
VIBER_GATEWAY_API_TOKEN=

# Enforce TLS when connecting to the gateway
VIBER_GATEWAY_SECURE=false

# Gateway task persistence backend: memory | sqlite | supabase
VIBER_GATEWAY_TASK_STORE=memory
# Gateway viber metadata persistence backend: memory | sqlite | supabase
# VIBER_GATEWAY_VIBER_STORE=memory
# Optional SQLite path when VIBER_GATEWAY_TASK_STORE=sqlite
# VIBER_GATEWAY_SQLITE_PATH=~/.openviber/gateway/tasks.sqlite3
# Optional Supabase overrides when VIBER_GATEWAY_TASK_STORE=supabase
# VIBER_GATEWAY_SUPABASE_URL=
# VIBER_GATEWAY_SUPABASE_SERVICE_ROLE_KEY=

# Gateway security (recommended for public deployments)
# VIBER_GATEWAY_API_TOKEN=replace-with-long-random-secret
# VIBER_GATEWAY_ALLOW_UNAUTH_LOCALHOST=true
# VIBER_GATEWAY_ALLOWED_ORIGINS=https://openviber.example.com

EXA_API_KEY=
FIRECRAWL_API_KEY=
JINA_API_KEY=
