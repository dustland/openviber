---
/**
 * Shared Header Component
 * Used across Home, Playground, and Docs pages for consistent navigation
 */
import ThemeToggle from './theme-toggle.svelte';

interface Props {
  currentPath?: string;
}

const currentPath = Astro.url.pathname;

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/getting-started/installation/", label: "Docs" },
  { href: "/playground/", label: "Playground" },
];

function isActive(href: string, current: string): boolean {
  if (href === "/") return current === "/";
  return current.startsWith(href.replace(/\/$/, ""));
}
---

<header class="shared-header">
  <div class="header-left">
    <a href="/" class="logo">
      <img src="/favicon.png" alt="Viber" width="24" height="24" />
      <span>Viber</span>
    </a>
    <nav class="nav-links">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class:list={["nav-link", { active: isActive(link.href, currentPath) }]}
            aria-current={isActive(link.href, currentPath) ? "page" : undefined}
          >
            {link.label}
          </a>
        ))
      }
    </nav>
  </div>
  <div class="header-right">
<ThemeToggle client:load />
    <a
      href="https://github.com/tiwater/viber"
      target="_blank"
      rel="noreferrer"
      class="github-link"
      aria-label="GitHub"
    >
      <svg viewBox="0 0 16 16" width="20" height="20" fill="currentColor">
        <path
          d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"
        ></path>
      </svg>
    </a>
  </div>
</header>

<style>
  .shared-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 4rem;
    padding: 0 1.5rem;
    background: var(--sl-color-bg-nav);
    border-bottom: 1px solid var(--sl-color-hairline);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--sl-color-text);
    text-decoration: none;
    transition: opacity 0.15s ease;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo img {
    width: 24px;
    height: 24px;
    border-radius: 4px;
  }

  .nav-links {
    display: none;
    align-items: center;
    gap: 0.25rem;
  }

  @media (min-width: 50rem) {
    .nav-links {
      display: flex;
    }
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 0.75rem;
    font-size: 0.9rem; /* Slightly larger */
    font-weight: 500;
    color: var(--muted-foreground);
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    color: var(--foreground);
    background-color: transparent; /* Remove blocky background on hover */
  }

  .nav-link.active,
  .nav-link[aria-current="page"] {
    color: var(--foreground);
    font-weight: 600;
    background-color: transparent;
    /* Optional: Add a subtle indicator if needed, or just rely on text color/weight */
  }

  /* Add a subtle indicator for active state if desired, or simpler: just text */
  /* For now, just high contrast text is cleaner than the ugly gray blocks */


  .header-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .github-link {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--muted-foreground);
    transition: color 0.15s ease;
  }

  .github-link:hover {
    color: var(--sl-color-text);
  }
</style>
